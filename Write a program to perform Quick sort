#include <stdio.h>

void pa(int a[], int l, int h) {
    for (int i = l; i <= h; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");
}

int partition(int a[], int low, int high) {
    int pivot = a[high];
    int i = low - 1;
    for (int j = low; j < high; j++) {
        if (a[j] < pivot) {
            i++;
            int temp = a[i]; a[i] = a[j]; a[j] = temp;
        }
    }
    int temp = a[i + 1]; a[i + 1] = a[high]; a[high] = temp;
    return i + 1;
}

void quick(int a[], int l, int h) {
    if (l < h) {
        int pi = partition(a, l, h);
        printf("Pass: ");
        pa(a, l, h);
        quick(a, l, pi - 1);
        quick(a, pi + 1, h);
    }
}

int main() {
    int a[100], n;
    printf("number of elements: ");
    scanf("%d", &n);
    
    printf("elements: ");
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    printf("Original array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");

    quick(a, 0, n - 1);

    printf("Sorted array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    printf("\n");

    return 0;
}

